{
  "name": "homelistingai-app",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "An AI-powered platform for real estate agents to generate stunning property listings with interactive features like an AI assistant.",
  "scripts": {
    "dev": "vite --port 5173",
    "build": "vite build",
    "build:check": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "test": "jest",
    "preview": "vite preview",
    "deploy": "npm run build",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "typecheck:admin": "tsc -p tsconfig.admin.json --noEmit",
    "verify:mailgun": "node scripts/check-mailgun-config.cjs",
    "ci": "npm run verify:mailgun && npm run lint && npm run typecheck && npm run build",
    "prepare": "husky",
    "start": "cd backend && node server.cjs",
    "start-server": "bash -c 'mkdir -p logs; npm --prefix backend run -s dev >> logs/backend.out 2>&1 & echo $! > logs/backend.pid; npm run -s dev >> logs/vite.out 2>&1 & echo $! > logs/vite.pid; echo \"✅ Backend PID $(cat logs/backend.pid); Vite PID $(cat logs/vite.pid)\"'",
    "stop-server": "bash -c 'kill $(cat logs/vite.pid) 2>/dev/null || true; kill $(cat logs/backend.pid) 2>/dev/null || true; kill $(cat logs/preview.pid) 2>/dev/null || true; rm -f logs/*.pid; echo \"✅ Servers stopped\"'"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@google/genai": "^0.14.0",
    "@supabase/supabase-js": "^2.56.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "html2canvas": "^1.4.1",
    "immer": "^10.1.1",
    "jspdf": "^3.0.1",
    "lucide-react": "^0.552.0",
    "openai": "^5.12.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.26.2",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.5.2",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "terser": "^5.43.1",
    "ts-jest": "^29.4.1",
    "typescript": "5.5.4",
    "vite": "^7.2.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/test/setupTests.ts"
    ],
    "testMatch": [
      "<rootDir>/src/**/*.test.(ts|tsx)"
    ]
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix --max-warnings=0"
    ]
  }
}
