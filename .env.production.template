# Production Environment Variables Template
# Copy this file to .env.production and fill in your actual values

# Firebase Configuration (REQUIRED)
VITE_FIREBASE_API_KEY=your-firebase-api-key-here
VITE_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id
VITE_FIREBASE_APP_ID=your-app-id

# AI Services (REQUIRED)
VITE_OPENAI_API_KEY=sk-your-openai-api-key-here
VITE_GEMINI_API_KEY=AIza-your-gemini-api-key-here

# Optional Services
VITE_DATAFINITI_API_KEY=your-datafiniti-api-key-here

# Error Tracking (Optional)
VITE_SENTRY_DSN=your-sentry-dsn-here

# Analytics (Optional)
VITE_GA_MEASUREMENT_ID=G-your-ga-measurement-id

# Environment
NODE_ENV=production
VITE_APP_ENV=production

# Security (Generate strong random values)
JWT_SECRET=your-super-secure-jwt-secret-here
ENCRYPTION_KEY=your-super-secure-encryption-key-here

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_WINDOW_MS=60000

# Data Retention (days)
AUDIT_LOG_RETENTION_DAYS=90
USER_DATA_RETENTION_DAYS=365
BACKUP_RETENTION_DAYS=30