rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Allow admins to access all user data
      allow read, write: if request.auth != null && request.auth.token.role == 'admin';
    }
    
    // Allow authenticated users to read/write their own properties
    match /properties/{propertyId} {
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      // Allow admins to access all properties
      allow read, write: if request.auth != null && request.auth.token.role == 'admin';
    }
    
    // Allow authenticated users to read/write their own leads
    match /leads/{leadId} {
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      // Allow admins to access all leads
      allow read, write: if request.auth != null && request.auth.token.role == 'admin';
    }
    
    // Allow admins to access admin settings
    match /adminSettings/{document=**} {
      allow read, write: if request.auth != null && request.auth.token.role == 'admin';
    }
    
    // Allow admins to access system data
    match /system/{document=**} {
      allow read, write: if request.auth != null && request.auth.token.role == 'admin';
    }
    
    // Allow authenticated users to read/write their own sequences
    match /sequences/{sequenceId} {
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      // Allow admins to access all sequences
      allow read, write: if request.auth != null && request.auth.token.role == 'admin';
    }
    
    // Allow authenticated users to read/write their own templates
    match /templates/{templateId} {
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      // Allow admins to access all templates
      allow read, write: if request.auth != null && request.auth.token.role == 'admin';
    }
    
    // Allow authenticated users to read/write their own files
    match /files/{fileId} {
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      // Allow admins to access all files
      allow read, write: if request.auth != null && request.auth.token.role == 'admin';
    }
    
    // Allow anyone to create consultations (for public consultation form)
    // Allow admins to read all consultations
    match /consultations/{consultationId} {
      allow create: if request.auth != null;
      allow read, update, delete: if request.auth != null && request.auth.token.role == 'admin';
    }
    
    // Allow authenticated users to create/update their own sessions
    match /userSessions/{sessionId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update: if request.auth != null && resource.data.userId == request.auth.uid;
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || request.auth.token.role == 'admin');
      // Allow admins to read all sessions
      allow read, write: if request.auth != null && request.auth.token.role == 'admin';
    }
    
    // Allow authenticated users to create their own session events
    match /sessionEvents/{eventId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || request.auth.token.role == 'admin');
      // Allow admins to read all session events
      allow read, write: if request.auth != null && request.auth.token.role == 'admin';
    }
  }
}
